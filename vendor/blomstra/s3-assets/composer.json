{
    "name": "blomstra/s3-assets",
    "description": "Relocate Flarum disks onto S3 or compatible bucket",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "proprietary",
    "homepage": "https://blomstra.net",
    "support": {
        "email": "helpdesk@blomstra.net"
    },
    "require": {
        "flarum/core": "^1.3.1",
        "league/flysystem-aws-s3-v3": "*",
        "vlucas/phpdotenv": "^5.4"
    },
    "authors": [
        {
            "name": "Team Blomstra",
            "email": "development@blomstra.net",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Blomstra\\S3Assets\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "S3 Assets",
            "category": "feature",
            "icon": {
                "name": "fas fa-box",
                "backgroundColor": "#EBF1FD",
                "color": "#3a98d0"
            }
        },
        "optional-dependencies": [
            "fof/upload"
        ]
    }
}
